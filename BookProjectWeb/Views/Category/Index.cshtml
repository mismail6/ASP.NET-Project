@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> &nbsp; Enter new name
            </a>
        </div>
    </div>
</div>
<br />
<table class=="table table-bordered table-striped" style="width:100%">
    <thread>
        <tr>
            <th>
                Category name
            </th>
            <th>

            </th>
        </tr>
    </thread>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td wdith="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-fill"></i> Edit </a>

                    </div>
                </td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-fill"></i> Remove </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
